{
    // common settings
    "LogLevel": 2,
	"LogFlushAlways": true,
    "LogFile": "lite3d.log",
    "TextureSettings": {
        "Anisotropy": 16,
        "Compression": true
    },
    // Video settings
    // Window size, caption, color settings, etc
    "VideoSettings": {
        "Width": 1024,
        "Height": 768,
        "Caption": "Vault Scene - Direct render + SSBO",
        "ColorBits": 24,
        "Fullscreen": false,
        "MSAA": 1,
        "VSync": false
    },
    // resource locations
    "ResourceLocations": [
        {
            "Name": "samples",
            "FileCacheMaxSize": 1024000,
            "Path": "samples/"
        },
        {
            "Name": "vault",
            "FileCacheMaxSize": 10240000,
            "Path": "packs/vault.pkg"
        },
        {
            "Name": "vaultmat",
            "FileCacheMaxSize": 102400,
            "Path": "vault_dr_ssbo/"
        },
        {
            "Name": "vaultshader",
            "FileCacheMaxSize": 10240,
            "Path": "vault_dr/"
        }
    ],

    "FixedUpdatesInterval": 30
}
