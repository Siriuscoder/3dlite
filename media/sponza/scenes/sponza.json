{
    "Cameras":
    [
        {
            "Name": "MyCamera",

            "Position": [700,0,-400],
            "LookAt": [-700,0,-400],
            "Perspective": 
            {
                "Znear": 10,
                "Zfar": 10000,
                "Fov": 60
            },
            "RenderTargets":
            [
                // draw only non transparent objects to depth
                {
                    "Name": "RenderDepth",
                    "Path": "sponzamat:targets/depth.json",
                    "Priority": 0,
                    "TexturePass": 1,
                    "RenderSecondStage": false,
                    "DepthTest": true,
                    "ColorOutput": false,
                    "DepthOutput": true
                },
                // draw all objects and calculate lighting
                {
                    "Name": "RenderDirect",
                    "Path": "sponzamat:targets/render.json",
                    "Priority": 0,
                    "TexturePass": 2,
                    "DepthTest": true,
                    "ColorOutput": true,
                    "DepthOutput": false
                }
            ]
        },
        {
            "Name": "ShadowCamera",
            "Ortho": 
            {
                "Near": -2000,
                "Far": 2000,
                "Left": -1000,
                "Right": 1000,
                "Bottom": -600,
                "Top": 1400
            },
            "RenderTargets":
            [
                // draw only non transparent objects to shadow map
                {
                    "Name": "RenderShadowMap",
                    "Path": "sponzamat:targets/shadow.json",
                    "Priority": 0,
                    "TexturePass": 1,
                    "RenderSecondStage": false,
                    "DepthTest": true,
                    "ColorOutput": false,
                    "DepthOutput": true
                }
            ]
        }
    ],
    
    "LightingTechnique": "UBO", 
    
    "Objects":
    [
        {
            "Name": "SponzaHall",
            "Object": "sponza:objects/sponzahall.json"
        }
    ]
}

