{
    // common settings
    "LogLevel": 2,
	"LogFlushAlways": true,
    "LogFile": "lite3d.log",
    "TextureSettings": {
        "Anisotropy": 4,
        "Compression": true
    },
    // Video settings
    // Window size, caption, color settings, etc
    "VideoSettings": {
        "Caption": "Vault Scene",
        "ColorBits": 24,
        "Fullscreen": true,
        "FSAA": 1,
        "VSync": true
    },
    // resource locations
    "ResourceLocations": [
        {
            "Name": "samples",
            "FileCacheMaxSize": 1024000,
            "Path": "samples/"
        },
        {
            "Name": "vault",
            "FileCacheMaxSize": 10240000,
            "Path": "vault/packs/vault.pkg"
        },
        {
            "Name": "vaultmat",
            "FileCacheMaxSize": 1024000,
            "Path": "vault/"
        }
    ],

    "FixedUpdatesInterval": 30
}
