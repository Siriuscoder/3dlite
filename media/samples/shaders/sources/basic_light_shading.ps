#version 330

uniform sampler2D diffuseSampler;
uniform vec4 ambient;
uniform vec4 diffuse;
uniform vec4 specular;
uniform vec4 emissive;

in vec2 tcoords;
in vec3 vnormal;
out vec4 fragcolor;

void main()
{
    vec3 lightDir = vec3(0.0, 1.0, 1.0);
    float nDotL = clamp(dot(vnormal, lightDir), 0.2, 1.0);
    fragcolor = texture2D(diffuseSampler, tcoords.st) * nDotL;
}